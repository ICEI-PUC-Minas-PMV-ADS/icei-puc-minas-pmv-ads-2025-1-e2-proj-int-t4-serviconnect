@{
    ViewData["Title"] = "Perfil Usuário";
}

<div class="container">
    <header class="header">
        <span class="back-icon">←</span>
        <h1 class="logo">ServiConnect</h1>
        <span class="edit-icon">👁️</span>
    </header>

    <div class="card">
        <div class="profile">
            <div class="cardusuario">
                <div class="avatar"></div>
                <div class="info">
                    <h2>Usuario 1</h2>
                    <p>Email: Usuario1@gmail.com</p>
                    <p>Data de nascimento: 01/01/2000</p>
                </div>
            </div>
        <div class="extra-info">
            <label for="info">Informações adicionais:</label>
            <textarea id="info" placeholder="Digite aqui..."></textarea>
        </div>
   
</div>


<style>

            .container {
                font-family: sans-serif;
                max-width: 600px;
                margin: 0 auto;
                border: 1px solid #ccc;
                background-color: #f5f5f5;
            }

            .header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 15px;
                background: white;
                font-weight: bold;
                border-bottom: 2px solid #ddd;
            }

            .back-icon,
            .edit-icon {
                font-size: 20px;
                cursor: pointer;
            }

            .card {
                background: white;
                margin: 10px;
                padding: 15px;
                border-radius: 6px;
                box-shadow: 0 0 5px rgba(0,0,0,0.1);
            }

            .cardusuario{
                display:flex;
                width:100%;
            }

            .profile {
                display: flex;
                flex-direction: column;
                align-items: center;
                margin-bottom: 20px;
            }

            .avatar {
                width: 80px;
                height: 80px;
                background: #d3d3d3;
                border-radius: 5px;
                margin-right: 15px;
            }

            .info h2 {
                margin: 0;
                font-size: 18px;
            }

            .info p {
                margin: 2px 0;
                font-size: 14px;
            }

            .extra-info label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
            }
            .extra-info{
                width:100%;
            }
            textarea {
                width: 100%;
                height: 120px;
                resize: none;
                border: none;
                background: #d3d3d3;
                padding: 10px;
                font-size: 14px;
                border-radius: 4px;
            }




     