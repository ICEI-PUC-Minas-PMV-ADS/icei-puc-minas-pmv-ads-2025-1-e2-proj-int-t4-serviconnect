@{
    ViewData["Title"] = "Solicitação de serviço";
}
<div class="container">
    <div class="header">Solicitação de serviços</div>

    <div class="card">
        <div class="user-info">
            <div class="avatar"></div>
            <div class="text-info">
                <div class="name">Carlos Andre Cardoso</div>
                <div class="profession">Eletricista Predial</div>
            </div>
        </div>

        <div class="progress-bar">
            <div class="step active">
                <div class="dot"></div>
                <div class="label">Iniciado</div>
            </div>
            <div class="line"></div>
            <div class="step active">
                <div class="dot"></div>
                <div class="label">Em andamento</div>
            </div>
            <div class="line"></div>
            <div class="step">
                <div class="dot"></div>
                <div class="label">Finalizado</div>
            </div>
        </div>
    </div>
</div>
<style>
    .container {
        width: 90%;
        max-width: 700px;
        margin: 0 auto;
        background-color: #ddd;
        font-family: Arial, sans-serif;
    }

    .header {
        text-align: center;
        font-weight: bold;
        padding: 10px;
        background: #f6f6f6;
        border: 2px solid #ccc;
        border-radius: 8px;
    }

    .card {
        background: white;
        padding: 15px;
        margin: 10px 0;
        border-radius: 6px;
        box-shadow: 0 0 4px rgba(0,0,0,0.1);
    }

    .user-info {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

    .avatar {
        width: 45px;
        height: 45px;
        background-color: #ccc;
        border-radius: 50%;
        background-image: url('https://img.icons8.com/ios-filled/100/000000/user.png');
        background-size: 60%;
        background-position: center;
        background-repeat: no-repeat;
    }

    .text-info {
        margin-left: 10px;
    }

    .name {
        font-weight: bold;
        font-size: 16px;
    }

    .profession {
        font-size: 13px;
        color: #555;
    }

    .progress-bar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin: 0 10px;
    }

    .step {
        display: flex;
        flex-direction: column;
        align-items: center;
        flex: 1;
        position: relative;
    }

    .dot {
        width: 15px;
        height: 15px;
        background-color: black;
        border-radius: 50%;
        z-index: 1;
    }

    .label {
        margin-top: 4px;
        font-size: 12px;
        text-align: center;
    }

    .line {
        height: 2px;
        background-color: black;
        flex: 1;
        margin: 0 5px;
    }

</style>