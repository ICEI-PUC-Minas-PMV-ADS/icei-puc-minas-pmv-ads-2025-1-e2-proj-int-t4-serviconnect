@using ServiConnect.Enums
@using ServiConnect.Repositorio;
@using ServiConnect.Models
@model Login

@{
	ViewData["Title"] = "Criar usuário";
}

<div class="text-center">
	<h1 class="display-4"> cadastrar Usuário</h1>
</div>


<form asp-controller="Usuário" asp-action="Criar" method="post">

	<div class="form-group">
		<label for="nome" class="form-label">Nome</label>
		<input type="text" asp-for="Name" class="form-control" placeholder="Digite seu Nome" />
		@Html.ValidationMessageFor(x => x.Name)
	</div>
	
	<div class="form-group">
		<label for="nome" class="form-label">Email</label>
		<input type="text" asp-for="Email" class="form-control" placeholder="Digite seu Email" />
		@Html.ValidationMessageFor(x => x.Email)
	</div>

	<div class="form-group">
		<label for="nome" class="form-label">Password</label>
		<input type="text" asp-for="Password" class="form-control" placeholder="Digite sua Senha" />
		@Html.ValidationMessageFor(x => x.Password)
		<
	</div>

	<div class="form-group">
		<label for="nome" class="form-label">Perfil</label>
		<select asp-for="Perfil" class="form-control">
			<option value="0">Selecione</option>
			<option value="@PerfilEnum.Admin">Administrador</option>
			<option value="@PerfilEnum.Padrão">Usuário</option>
		</select>
	</div>

	<button type="submit" class="btn btn-primary btn-block">Adicionar</button> 
	<a class="btn btn-secondary btn-block" asp-action="index" asp-controller="Usuário" role="button">Voltar</a>

		</form>