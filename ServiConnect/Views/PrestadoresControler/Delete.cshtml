@using ServiConnect.Models
@model Prestador

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar prestador</h1>

<h2>Esse prestador não esta de acordo com as diretrizes do sistema</h2>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Profissão)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Profissão)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Informações)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Informações)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
